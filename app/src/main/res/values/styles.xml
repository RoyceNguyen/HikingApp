<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="AppTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="HoloLightCustom" parent="@android:style/Theme.Holo.Light">
        <item name="android:windowBackground">@color/colorPrimary</item>
        <item name="android:colorBackground">@color/colorPrimaryDark</item>
        <item name="android:textColor">@color/textAndIcons</item>
    </style>



    <style name="HoloCustom" parent="@android:style/Theme.Holo">
        <item name="android:windowBackground">@color/colorPrimary2</item>
        <item name="android:colorBackground">@color/colorPrimary3</item>
        <item name="android:textColor">@color/textAndIcons</item>
    </style>

    <style name="DarkCustom" parent="Theme.AppCompat.DayNight">
    </style>

    <style name="MyDialogLight" parent="Theme.AppCompat.Light.Dialog.Alert">
    </style>

    <style name="MyDialogDark" parent="Theme.AppCompat.Dialog.Alert">
    </style>


    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

    <style name="HashtagView">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginLeft">10dp</item>
        <item name="android:layout_marginRight">10dp</item>
        <item name="android:paddingBottom">10dp</item>
        <item name="android:paddingTop">10dp</item>
        <item name="tagTextSize">15dp</item>
    </style>
</resources>
