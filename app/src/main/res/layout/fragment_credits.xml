<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.stclaircollege.rnb.hikingapp.CreditsFragment">

    <!-- TODO: Update blank fragment layout -->
    <!-- Creating credits page -->


    <TextView
        android:id="@+id/creditsTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:gravity="center"
        android:padding="@dimen/padding_addTrip"
        android:text="@string/title_credits"
        android:textAllCaps="true"
        android:textColor="@color/primaryTextColor"
        android:textSize="@dimen/titleTextSize"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/textView5"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/creditsTitle"
        android:layout_marginTop="17dp"
        android:text="Blaze:"
        android:padding="@dimen/padding_addTrip"
        android:textColor="@color/primaryTextColor"
        android:textSize="@dimen/textSize"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/textView6"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/textView5"
        android:padding="@dimen/padding_addTrip"
        android:text="Designed the app from colour choices and layout for each fragment too our home page and nav drawer. Created Credits and Contact Us fragments. As well as the Settings Activity for changing the theme."
        android:textColor="@color/primaryTextColor"
        android:textSize="@dimen/textSize" />

    <TextView
        android:id="@+id/textView7"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/textView6"
        android:layout_marginTop="26dp"
        android:padding="@dimen/padding_addTrip"
        android:text="Royce:"
        android:textColor="@color/primaryTextColor"
        android:textSize="@dimen/textSize"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/textView8"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/textView7"
        android:padding="@dimen/padding_addTrip"
        android:text="Created the database used for the app, implemented our Google Places API to work within our AddTrip fragment."
        android:textColor="@color/primaryTextColor"
        android:textSize="@dimen/textSize" />

    <TextView
        android:id="@+id/textView9"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/textView8"
        android:layout_marginTop="24dp"
        android:padding="@dimen/padding_addTrip"
        android:text="https://github.com/drawers/SpinnerDatePicker for date picker implementation"
        android:textColor="@color/primaryTextColor"
        android:textSize="@dimen/textSize" />

    <TextView
        android:id="@+id/textView10"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/textView9"
        android:layout_marginTop="13dp"
        android:padding="@dimen/padding_addTrip"
        android:text="https://github.com/afollestad/material-dialogs for the material design dialog used to add participants and organizer"
        android:textColor="@color/primaryTextColor"
        android:textSize="@dimen/textSize" />

    <TextView
        android:id="@+id/textView11"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/textView10"
        android:layout_marginTop="13dp"
        android:padding="@dimen/padding_addTrip"
        android:text="https://github.com/greenfrvr/hashtag-view for the widget to present data in participant list "
        android:textColor="@color/primaryTextColor"
        android:textSize="@dimen/textSize" />

    <TextView
        android:id="@+id/textView12"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/textView11"
        android:layout_marginTop="21dp"
        android:padding="@dimen/padding_addTrip"
        android:text="https://github.com/zcweng/SwitchButton for the switch button to that we used to switch between miles and kilometers"
        android:textColor="@color/primaryTextColor"
        android:textSize="@dimen/textSize" />
</RelativeLayout>
