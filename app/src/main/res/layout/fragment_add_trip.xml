<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"

    android:orientation="vertical"
    android:padding="4dp"
    tools:context="com.stclaircollege.rnb.hikingapp.AddTripFragment">

    <!-- TODO: Update blank fragment layout -->


    <TextView
        android:id="@+id/textView6"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:fontFamily="sans-serif-condensed"
        android:padding="4dp"
        android:text="New Trip"
        android:textAlignment="center"
        android:textAllCaps="true"
        android:textSize="22sp"
        android:textStyle="bold" />


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:columnCount="3"
        android:padding="4dp">

        <TextView
            android:id="@+id/textView7"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@+id/searchView"
            android:layout_alignEnd="@+id/textView9"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:gravity="left|center"
            android:padding="4dp"
            android:text="Location:" />

        <SearchView
            android:id="@+id/searchView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_toEndOf="@+id/textView7"
            android:padding="4dp">

        </SearchView>

        <TextView
            android:id="@+id/textView9"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@+id/editText4"
            android:layout_alignParentStart="true"
            android:layout_below="@+id/textView7"
            android:layout_toStartOf="@+id/editText3"
            android:gravity="left|center"
            android:padding="4dp"
            android:text="Start Date:" />

        <EditText
            android:id="@+id/editText4"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/searchView"
            android:layout_toEndOf="@+id/textView9"
            android:ems="10"
            android:inputType="date"
            android:labelFor="@+id/textView9"
            android:padding="4dp"
            android:text="" />

        <TextView
            android:id="@+id/textView10"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@+id/editText3"
            android:layout_alignParentStart="true"
            android:layout_alignTop="@+id/editText3"
            android:layout_toStartOf="@+id/spinner"
            android:gravity="left|center"
            android:padding="4dp"
            android:text="End Date:" />

        <EditText
            android:id="@+id/editText3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/editText4"
            android:layout_toEndOf="@+id/textView10"
            android:ems="10"
            android:inputType="date"
            android:labelFor="@+id/textView10"
            android:padding="4dp"
            android:text="" />

        <TextView
            android:id="@+id/textView11"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@+id/button2"
            android:layout_alignParentStart="true"
            android:layout_below="@+id/editText3"
            android:layout_weight="1"
            android:gravity="left|center"
            android:padding="4dp"
            android:text="Trip Organizer:" />

        <Spinner
            android:id="@+id/spinner"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:layout_below="@+id/editText3"
            android:layout_toEndOf="@+id/textView11"
            android:padding="4dp" />

        <Button
            android:id="@+id/button2"
            android:layout_width="37dp"
            android:layout_height="37dp"
            android:layout_below="@+id/editText3"
            android:layout_toEndOf="@+id/spinner"
            android:padding="4dp"
            android:text="+" />

        <TextView
            android:id="@+id/textView2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@+id/editText"
            android:layout_alignEnd="@+id/textView11"
            android:layout_alignParentStart="true"
            android:layout_below="@+id/textView11"
            android:gravity="left|center"
            android:padding="4dp"
            android:text="Participants:" />

        <EditText
            android:id="@+id/editText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/textView11"
            android:layout_toEndOf="@+id/textView2"
            android:ems="10"
            android:inputType="textMultiLine" />

        <TextView
            android:id="@+id/textView5"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_alignTop="@+id/editText6"
            android:layout_toStartOf="@+id/editText"
            android:gravity="left|center"
            android:padding="4dp"
            android:text="Number of days:" />

        <EditText
            android:id="@+id/editText6"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/editText"
            android:layout_toEndOf="@+id/textView5"
            android:ems="10"
            android:inputType="number" />

        <TextView
            android:id="@+id/textView8"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_below="@+id/textView5"
            android:gravity="left|center"
            android:padding="4dp"
            android:text="Accomodations:" />

        <Spinner
            android:id="@+id/spinner2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignEnd="@+id/button2"
            android:layout_below="@+id/editText6"
            android:layout_toEndOf="@+id/textView8" />

        <Button
            android:id="@+id/button3"
            android:layout_width="37dp"
            android:layout_height="37dp"
            android:layout_below="@+id/editText6"
            android:layout_toEndOf="@+id/spinner2"
            android:text="+" />

    </RelativeLayout>

</LinearLayout>

